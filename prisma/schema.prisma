generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.sqlite"
}

model Room {
  Room_id         String    @id @unique
  Room_name       String?   
  Capacity        Int
  Equipment       String?   

  @@map("Rooms")
  Reservation Reservation[]
}

model Reservation {
  Reservation_id  Int       @id 
  Room            Room      @relation(fields: [Room_id], references: [Room_id]) 
  Room_id         String       
  Time_start      DateTime 
  Time_end        DateTime

  @@map("Reservations")
}
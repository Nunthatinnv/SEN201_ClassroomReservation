generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/schedool_reservation.sqlite"
}

model Room {
  roomId              String    @map("room_id")  @id  
  roomName            String?   @map("room_name")
  capacity            Int
  equipments          String?
  Reservation Reservation[]
}

model Reservation {
  reservationId       Int       @map("reservation_id")  @id @default(autoincrement())
  series              Series    @relation(fields: [seriesId], references: [seriesId]) 
  seriesId            String    @map("series_id")
  room                Room      @relation(fields: [roomId], references: [roomId]) 
  roomId              String    @map("room_id") 
  timeStart           DateTime  @map("time_start")
  timeEnd             DateTime  @map("time_end")
  competency          String
}

model Series {
  seriesId            String    @map("series_id")  @id
  capacity            Int
  repetition          Int
  Reservation Reservation[]
}